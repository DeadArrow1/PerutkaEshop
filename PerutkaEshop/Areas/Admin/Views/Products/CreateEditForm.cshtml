@using Perutka.Eshop.Web.Areas.Admin.Controllers
@model Product

@{
    if (String.IsNullOrWhiteSpace(ViewBag.Action) == false)
    {
    <form asp-action="@ViewBag.Action" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        @{ if (ViewBag.Action == nameof(ProductsController.Edit))
            {
                <input type="hidden" asp-for="ID" class="form-control">
            }
        }
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter name">
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="Number">Quantity</label>
            <input asp-for="Number" type="text" class="form-control" placeholder="Enter quantity">
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="text" class="form-control" placeholder="Enter price">
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" type="text" class="form-control" placeholder="Enter description">
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>

       <div class="form-group">
            <label asp-for="Image">Image source</label>
            <input id="fileupload" asp-for="Image" class="form-control-file" accept="image/*" placeholder="Enter image File">
            <span asp-validation-for="Image" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="ImageAlt">Image source</label>
            <input asp-for="ImageAlt" type="text" class="form-control" placeholder="Enter image alternative source">
            <span asp-validation-for="ImageAlt" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    }

}