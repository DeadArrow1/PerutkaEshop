@model IList<Email>
@{
    ViewData["Title"] = "Emails";
}
<h1>@ViewData["Title"]</h1>

<p>This page shows all emails for admin</p>


<img style="display: block; margin-left: auto; margin-right: auto;margin-bottom: 10px; width: 40%;" src="~/img/impressive-very-nice.gif" />


@{
    if (Model != null && Model.Count > 0)
    {




        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Body</th>
                    <th scope="col">Edit</th>
                  

                </tr>
            </thead>
            <tbody>

                @{
                    for (int i = 0; i < Model.Count; ++i)
                    {
                                <tr>
                                    <th scope="row">@Model[i].ID</th>
                                    <td>@Model[i].Name</td>
                                  
                                    <td>@Model[i].Body</td>                                   
                                    <td><a asp-action="Edit" asp-route-ID="@Model[i].ID">edit</a></td>                                
                                </tr>
                    }

                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Emails listed</p>
    }
}
@section Scripts
{
    <script src="~/js/alerts.js"></script>
}
